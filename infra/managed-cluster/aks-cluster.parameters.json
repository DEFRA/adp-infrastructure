{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnet": {
            "value": {
                "name": "#{{ virtualNetworkName }}",
                "resourceGroup": "#{{ virtualNetworkResourceGroup }}",
                "subnetClusterNodes": "#{{ networkResourceNamePrefix }}#{{ nc_resource_subnet }}#{{ nc_instance_regionid }}01"
            }
        },
        "cluster": {
            "value": {
                "name": "#{{ infraResourceNamePrefix }}#{{ nc_resource_kubernetesservice }}#{{ nc_instance_regionid }}01",
                "skuTier": "#{{ aksClusterSkuTier }}",
                "nodeResourceGroup": "#{{ aksNodeResourceGroup }}",
                "miControlPlane": "#{{ aksControlPlaneManagedIdentity }}",
                "adminAadGroupObjectId": "#{{ aksAADProfileAdminGroupObjectId }}",
                "npSystem": {
                    "count": 2,
                    "osDiskSizeGB": 80,
                    "maxCount": 4,
                    "minCount": 1,
                    "maxPods": 80,
                    "availabilityZones": [
                        "1",
                        "2",
                        "3"
                    ]
                },
                "npUser": {
                    "count": 2,
                    "osDiskSizeGB": 128,
                    "maxCount": 10,
                    "minCount": 2,
                    "maxPods": 80,
                    "minPods": 2,
                    "availabilityZones": [
                        "1",
                        "2",
                        "3"
                    ]
                }
            }
        },
        "location": {
            "value": "#{{ location }}"
        },
        "environment": {
            "value": "#{{ environment }}"
        },
        "fluxConfig": {
            "value": {
                "fluxCore": {
                    "gitRepository": {
                        "syncIntervalInSeconds": 300,
                        "timeoutInSeconds": 180,
                        "url": "https://github.com/defra-adp-sandpit/adp-flux-infrastructure"
                    },
                    "kustomizations": {
                        "timeoutInSeconds": 600,
                        "syncIntervalInSeconds": 600,
                        "clusterPath": "./clusters/#{{ environment }}/01",
                        "infraPath": "./infra/#{{ environment }}/01"
                    }
                },
                "fluxServices": {
                    "gitRepository": {
                        "syncIntervalInSeconds": 300,
                        "timeoutInSeconds": 180,
                        "url": "https://github.com/defra-adp-sandpit/adp-flux-applications"
                    },
                    "kustomizations": {
                        "timeoutInSeconds": 600,
                        "syncIntervalInSeconds": 600,
                        "retryIntervalInSeconds": 120,
                        "appsPath": "./services/#{{ environment }}/01"
                    }
                }
            }
        }
    }